<!DOCTYPE html> //informacja dla przeglądarki
<html lang="pl"> //informacja o języku
    <head> //nagłówek strony
        <meta charset="UTF-8"/> //kodowanie znaków
        <title>Portfelik</title> //tytuł strony
        <script src="skrypt.js"></script>
    </head>

    <body> //wszystko co pojawi się na stronie
        <form>
            Podaj liczbę: //instrukcja dla użytkownika
            <input type="text" id="userNumber">
        </form>
        <p id="message"></p>
        <button types="button" onclick="play()">Wyświetl tekst</button> 
    </body>
</html>

////////////////////////////////////////////////////////////////////////////////

let number = Math.floor(Math.random()*11); //wylosuje liczbę całkowitą od 0 do 10
//Math.floor()- zaokrąglanie w dół
//Math.random()- losuje liczbę od 0 do 1

function play(){
    let userNumber = document.getElementById("userNumber").nodeValue; //pobieramy wartość od użytkownika
    let message; //zmienna- wiadomość dla użytkownika

    if(userNumber>number)
    {
        message = "zły numer";
    }
    else if (userNumber<number)
    {
        message="liczba jest za mała :(";
    }
    else 
    {
        message="super jesteś, właściwa liczba";
    }
    document.getElementById("message").innerHTML=message; //wyświetli się po kliknęciu przycisku
}
